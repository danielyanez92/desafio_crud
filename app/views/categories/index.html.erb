<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Productos por Categoria</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Show', category, class:'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-outline-success' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
